<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @station.name %>
</p>

<p>
  <strong>mins_from_home:</strong>
  <%= @station.mins_from_home %>
</p>

<h2>Train trips</h2>
<% @station.traintrips.sort.each do |traintrip| %>
  <%= traintrip.train_leaves_at.strftime("%H:%M") %><br/>
<% end %>

<h2>Add a train departure time</h2>
<%= form_for([@station, @station.traintrips.build]) do |f| %>
  <p>
    <%= f.label :train_leaves_at %><br>
    <%= f.text_field :train_leaves_at %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Edit', edit_station_path(@station) %> |
<%= link_to 'Back', stations_path %>
