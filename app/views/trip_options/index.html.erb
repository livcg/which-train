<p id="notice"><%= notice %></p>

<h1>Listing Trip Options</h1>

<table>
  <thead>
    <tr>
      <th>leave_house_by</th>
      <th>train_leaves_at</th>
      <th>Station</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trip_options.each do |trip_option| %>
      <tr>
        <td><%= trip_option.leave_house_by %></td>
        <td><%= trip_option.train_leaves_at %></td>
        <td><%= trip_option.station %></td>
        <td><%= link_to 'Show', trip_option %></td>
        <td><%= link_to 'Edit', edit_trip_option_path(trip_option) %></td>
        <td><%= link_to 'Destroy', trip_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

